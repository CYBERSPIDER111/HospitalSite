extends base.pug


block scripts 
    script(src='/static/index.js')

block style 
    style 
        include ../static/styleContact.css
        include ../static/style.css

block content 
    div.container
        h2 Contact Us
        form(action="/contact" method="post" class="myform")
            input(type="text" class="myinput" name="name" placeholder="Enter your name")
            input(type="phone" class="myinput" name="phone" placeholder="Enter your contact number")
            input(type="email" class="myinput" name="email" placeholder="Enter your Email i'd")
            input(type="text" class="myinput" name="address" placeholder="Enter your residence")
            input(type="text" class="myinput" name="desc" placeholder="Enter your query")
            button(class="btn")
                | Submit